<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Action to open To-test Taks list -->
        <act_window id="action_totest_task"
            name="To-test Task"
            res_model="totest.task"
            view_mode="tree,form" />

        <!-- Menu item to open To-test Taks list -->
        <menuitem
            id="menu_totest_task"
            name="To-Test Tasks"
            web_icon="totest_app,static/description/icon.png"
            parent="mail.mail_channel_menu_root_chat"
            sequence="20"
            action="action_totest_task"
        />


        <!-- Form view -->
        <record id="view_form_totest_task" model="ir.ui.view">
            <field name="name">To-test Task Form</field>
            <field name="model">totest.task</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="do_toggle_done" type="object"
                            string="Toggle Done" class="oe_highlight" />
                        <button name="do_clear_done" type="object"
                            string="Clear All Done" />
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name" />
                            </group>
                            <group name="group_right">
                                <field name="is_done" />
                                <field name="active" readonly="1" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree view -->
        <record id="view_tree_totest_task" model="ir.ui.view">
            <field name="name">To-test Task Tree</field>
            <field name="model">totest.task</field>
            <field name="arch" type="xml">
                <tree colors="gray:is_done==True">
                    <field name="name" />
                    <field name="is_done" />
                </tree>
            </field>
        </record>
        <!-- Search Filter -->
        <record id="view_filter_totest_task" model="ir.ui.view">
            <field name="name">To-test Task Filter</field>
            <field name="model">totest.task</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Not Done"
                        domain="[('is_done','=',False)]"/>
                    <filter string="Done"
                        domain="[('is_done','!=',False)]"/>
                </search>
            </field>
        </record>
    </data>
</openerp>
